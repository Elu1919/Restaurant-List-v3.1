<h1 class="mb-1 restaurant-show-title">ADD NEW RESTAURANT</h1>

<div class="container">

       <div class="card mb-5 p-5 mx-auto"
            style="width: 50rem;">

              <h2 class="card-title fw-bold mb-4">Please enter restaurant information !</h2>

              <div class="card-body p-0">
                     <form action="/restaurants"
                           method="post">

                            {{! 餐廳名稱 }}
                            <div class="mb-3">
                                   <label for="name"
                                          class="form-label">餐廳名稱<span class="text-danger">*</span></label>
                                   <input type="text"
                                          class="form-control"
                                          id="name"
                                          placeholder="請輸入: 餐廳名稱"
                                          name="name"
                                          required />
                            </div>

                            {{! 餐廳英文名稱 }}
                            <div class="mb-3">
                                   <label for="name_en"
                                          class="form-label">餐廳英文名稱</label>
                                   <input type="text"
                                          class="form-control"
                                          id="ame_en"
                                          placeholder="請輸入: 餐廳的英文名稱"
                                          name="ame_en" />
                            </div>

                            {{! 餐廳類別 }}
                            <div class="mb-3">
                                   <label for="category"
                                          class="form-label">餐廳類別<span class="text-danger">*</span></label>
                                   <input type="text"
                                          class="form-control"
                                          id="category"
                                          placeholder="EX: 日本料理、咖啡廳、酒吧"
                                          name="category"
                                          list="categoryOptions"
                                          required />

                                   <datalist id="categoryOptions">
                                          <option>美式</option>
                                          <option>咖啡</option>
                                          <option>中東料理</option>
                                          <option>日本料理</option>
                                          <option>義式餐廳</option>
                                   </datalist>
                            </div>

                            {{! 餐廳圖片 }}
                            <div class="mb-3">
                                   <label for="image"
                                          class="form-label">餐廳相片連結<span class="text-danger">*</span></label>
                                   <input type="url"
                                          class="form-control"
                                          id="image"
                                          placeholder="請貼上: 相片連結"
                                          name="image"
                                          required />
                            </div>

                            {{! 餐廳地址 }}
                            <div class="mb-3">
                                   <label for="location"
                                          class="form-label">餐廳地址<span class="text-danger">*</span></label>
                                   <input type="text"
                                          class="form-control"
                                          id="location"
                                          placeholder="請輸入: 餐廳所在的地址"
                                          name="location"
                                          required />
                            </div>

                            {{! 餐廳電話 }}
                            <div class="mb-3">
                                   <label for="phone"
                                          class="form-label">餐廳電話<span class="text-danger">*</span></label>
                                   <input type="tel"
                                          class="form-control"
                                          id="phone"
                                          placeholder="請輸入: 餐廳連絡電話"
                                          name="phone"
                                          required />
                            </div>

                            {{! 餐廳地圖 }}
                            <div class="mb-3">
                                   <label for="google_map"
                                          class="form-label">Google地圖連結</label>
                                   <input type="url"
                                          class="form-control"
                                          id="google_map"
                                          placeholder="可附上餐廳的Google定位連結"
                                          name="google_map">
                            </div>

                            {{! 餐廳評分 }}
                            <div class="mb-3">
                                   <label for="rating"
                                          class="form-label">餐廳評分<span class="text-danger">*</span></label>
                                   <input type="number"
                                          class="form-control"
                                          id="rating"
                                          placeholder="0.0 ~ 5.0"
                                          min="0"
                                          max="5"
                                          step="0.1"
                                          name="rating"
                                          required />
                            </div>

                            {{! 餐廳簡介 }}
                            <div class="mb-3">
                                   <label for="description"
                                          class="form-label">餐廳簡介</label>
                                   <textarea class="form-control"
                                             id="description"
                                             placeholder="請輸入: 約150字的餐廳簡介"
                                             rows="3"
                                             name="description"></textarea>
                            </div>

                            <div class="text-end">

                                   {{! 送出 }}
                                   <button type="submit"
                                           class="btn btn-major mt-3">Create</button>

                                   {{! 回首頁 }}
                                   <a href="/"
                                      class="btn btn-outline-secondary mt-3"
                                      role="button">
                                          Back
                                   </a>

                                   {{! 重新輸入 }}
                                   <button type="reset"
                                           class="btn btn-outline-danger mt-3">
                                          Reset
                                   </button>
                            </div>

                     </form>

              </div>

       </div>
</div>